
@{
    ViewBag.Title = "AllProduct";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <div>
            <table id="example" class="display" style="width:100%">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>İsim</th>
                        <th>Fiyat</th>
                        <th>Stok</th>
                        <th>Kategory</th>
                        <th>User</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>




@section scripts{


    <script src="//code.jquery.com/jquery-3.5.1.js"></script>
    <script src="//cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <link href="//cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css" rel="stylesheet" />



    <script>
        $(document).ready(function () {
            $('#example').DataTable({
                "ajax": {
                    "url": "/Product/GetList",
                    "type": "POST",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "Id", "name": "Id", "autoWith": true },
                    { "data": "Name", "name": "Name", "autoWith": true },
                    { "data": "UnitPrice", "name": "UnitPrice", "autoWith": true },
                    { "data": "UnitsInStock", "name": "UnitsInStock", "autoWith": true },
                    { "data": "CategoryId", "name": "CategoryId", "autoWith": true },
                    { "data": "UserId", "name": "UserId", "autoWith": true },
                    
                ],
            });
        });
    </script>
}
