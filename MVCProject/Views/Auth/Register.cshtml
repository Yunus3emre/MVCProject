<body class="text-center">
    <main class="form-signin">
        <img class="mb-4" src="https://getbootstrap.com/docs/5.1/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57">
        <h1 class="h3 mb-3 fw-normal">Kayıt Ol!</h1>
        @using (Html.BeginForm("Register", "Auth", FormMethod.Post))
        {
            <div class="form-floating mb-2">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Password" })
                @Html.LabelFor(m => m.Name)
            </div>
            <div class="form-floating mb-2">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Password" })
                @Html.LabelFor(m => m.LastName)
            </div>
            <div class="form-floating mb-2">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "E-Mail" })
                @Html.LabelFor(m => m.Email)
            </div>
            <div class="form-floating mb-2">
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="form-floating mb-2">
                
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                <label for="Password">Password Repeat</label>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Kayıt ol</button>
        }
        <p class="mt-5 mb-3 text-muted">© 2022</p>
    </main>
