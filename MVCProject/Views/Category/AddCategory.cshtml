@model EntityLayer.Concrete.Category
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h1>YENİ KATEGORİ EKLEME</h1>
<br />
@using (Html.BeginForm("AddCategory","Category",FormMethod.Post))
{
<div class="form-horizontal">
    <div class="form-group">
        <label class="control-label col-md-2" for="Name">Kategorinin Adı</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="Name">Kategorinin açıklaması</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="Name">Kategori Resmi adresi</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.ImageName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ImageName, "", new { @class = "text-danger" })
        </div>
    </div>
    <button class="btn btn-primary">Kaydet</button>
</div>
}
